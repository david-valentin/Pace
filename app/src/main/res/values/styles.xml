<resources>

    <!-- Base application theme that extends AppCompact with no Action Bar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2294F7</item>
        <item name="colorPrimaryDark">#295984</item>
        <item name="colorAccent">#F08A4B</item>
    </style>

    <!-- Styling for the the Toolbar -->
    <style name="TopToolbarTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2294F7</item>
        <item name="colorPrimaryDark">#295984</item>
        <item name="colorAccent">#F08A4B</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <!-- Styling for Text in the Toolbar -->
    <style name="ToolbarTextThemeRight">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--Styling for ImageView for Buttons on the Rightside of the Toolbar -->
    <style name="ImageButtonThemeRight">
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>


    <!--Styling for BottomToolbar Buttons -->
    <style name="BottomToolbarTheme">
        <item name="android:layout_width">200dp</item>
        <item name="android:background">#2294F7</item>
    </style>

    <style name="CurrentDataText">
        <item name="android:textSize">25sp</item>
        <item name="android:color">#000000</item>
    </style>

</resources>
